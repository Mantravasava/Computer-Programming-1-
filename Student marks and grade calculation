#include <stdio.h>

int main() {
    int m1, m2, m3;
    float total, average;

    printf("Enter marks of 3 subjects: ");
    scanf("%d %d %d", &m1, &m2, &m3);

    if(m1 < 35 || m2 < 35 || m3 < 35) {
        printf("Fail (one or more subjects less than 35)\n");
    } else {
        total = m1 + m2 + m3;
        average = total / 3;

        printf("Total = %.2f\n", total);
        printf("Average = %.2f\n", average);

        if(average >= 70)
            printf("Grade: Distinction\n");
        else if(average >= 60)
            printf("Grade: First\n");
        else if(average >= 50)
            printf("Grade: Second\n");
        else if(average >= 35)
            printf("Grade: Third\n");
        else
            printf("Fail\n");
    }

    return 0;
}
