#include <stdio.h>

int main() {
    float gross, discount, netsales;
    printf("Enter gross sales: ");
    scanf("%f", &gross);

    if(gross > 20000)
        discount = 0.15 * gross;
    else if(gross > 10000)
        discount = 0.10 * gross;
    else
        discount = 0.05 * gross;

    netsales = gross - discount;
    printf("Net Sales = %.2f\n", netsales);

    return 0;
}
